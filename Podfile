platform :ios, '10.0'
source 'https://github.com/CocoaPods/Specs.git'

def sicloPods
  # Image managers
  pod 'Kingfisher' # Downloading and caching images
  
  # UI Elements
  pod 'NVActivityIndicatorView' # Loading view
  pod 'Cosmos', '~> 22.1'
  
  # Firebase
  pod 'Firebase/Analytics' # Analytics
  pod 'Firebase/Auth' # Login
end

target 'SicloCalendar' do
    sicloPods
end
